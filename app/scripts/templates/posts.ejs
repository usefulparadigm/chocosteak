<nav class="current">
  <h1>Cookin' Facebook</h1>
</nav>
<article id="home" class="current">
  <section>
    <h2>Recent Posts</h2>

    <ul class="list" role="list">
      <% _.each(posts, function(post) { %>
      <li class='comp' data-goto="post-<%= post.id %>">
        <% if (post.thumbnail) { %>
          <aside>
             <img src="<%= post.thumbnail %>" height="80px">
          </aside>
        <% } %>  
        <div>
           <h3><%= post.title %></h3>
        </div>
        <aside>
          <span class="nav"></span>
        </aside>
      </li>
      <% }); %>
    </ul>  
  </section>
</article>

<% _.each(posts, function(post) { %>
  <nav class="next">
    <a href='#' class='button back'>Navigation</a>
    <h1>Cookin' Facebook</h1>
  </nav>
  <article id="post-<%= post.id %>" class="next">
    <section>
      <h2>Posted at <%= post.date %> by <%= post.author.name %></h2>
      <ul class="list">
        <li>
          <h3><%= post.title %></h3>
          <div class="content">
            <%= remove_span_style(post.content) %>
          </div>
        </li>
      </ul>
      <p>Your copyright goes here.</p>
    </section>
  </article>
<% }); %>

<%
function remove_span_style(html) {
  // console.log(html);
  // html = html.replace(/<[^>]*>/gim, '');
  // html = html.replace(/<script[^>]*>([\\S\\s]*?)<\/script>/img, '');
  html = html.replace(/<\/?span[^>]*>/gim,"");
  return html;
}
%>


